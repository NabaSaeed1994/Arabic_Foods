@model Web.ViewModels.ContactModel


@{
    ViewData["Title"] = "Contact";
}

<div style="
        margin-left: 160px;
        margin-right: 160px;
        margin-top: 50px;
        margin-bottom: 50px;
        padding-left: 120px;
        padding-right: 120px;
        padding-top: 50px;
        padding-bottom: 50px;
    ">
    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">

            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">تواصل معنا</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>


           @if (ViewBag.msg != null){
            
            <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.msg");

    };
                </script>
            }
            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    <form asp-action="Contact" name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                @*<label asp-for="Name">الأسم</label>*@
                                <input asp-for="Name" class="form-control" id="name" type="text" placeholder="الأسم" required="required" data-validation-required-message="الرجاء كتابة اسمك">
                               
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                @*<label asp-for="Email">الإيميل</label>*@
                                <input asp-for="Email" class="form-control" id="email" type="email" placeholder="الإيميل" required="required" data-validation-required-message="الرجاء كتابة ايميلك">
                               
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>


                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                @*<label asp-for="Phone">رقم الجوال</label>*@
                                <input asp-for="Phone" class="form-control" id="phone" type="tel" placeholder="رقم الجوال" required="required" data-validation-required-message="الرجاء كتابة رقم الجوال">
                             
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                @*<label asp-for="Subject">عنوان الرسالة</label>*@
                                <input asp-for="Subject" class="form-control" id="subject" type="text" placeholder="عنوان الرسالة" required="required" data-validation-required-message="الرجاء كتابة عنوان الرسالة">
                               
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>


                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                @*<label asp-for="Massege">الرسالة</label>*@
                                <textarea asp-for="Massege" class="form-control" id="message" rows="5" placeholder="الرسالة" required="required" data-validation-required-message="الرجاء كتابة الرسالة"></textarea>
                                
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>

                        <div id="success"></div>
                        <div class="form-group">
                            <input type="submit" value="ارسال" class="btn btn-primary" id="sendMessageButton" />

                        </div>

                        <div class="form-group">

                            <a asp-action="Index" class="btn btn-outline-dark">العودة للصفحة الرئيسية </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
